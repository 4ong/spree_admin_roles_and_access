
<% content_for :page_title do %>
  <%= Spree.t(:edit_role) %>
<% end %>

<div data-hook="admin_role_edit_form_header">
  <%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @user } %>
</div>

<div data-hook="admin_role_edit_form">
  <%= form_for [:admin, @role], url: admin_role_path, method: :patch do |f| %>
    <%= render :partial => 'form', :locals => { f: f } %>

    <div data-hook="admin_user_new_form_buttons">
      <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
    </div>
  <% end %>
</div>
